<div class="container">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <% if value.is_a?(Array) %>
            <% value.each do |e| %>
              <div><%= e %></div>
            <% end %> 
          <% else %>
            <div><%= value %></div>
          <% end %>
        </div>
    <% end %>
</div>
