<h1>Review of <%= link_to @review.beer.name, brewery_beer_path(@review.beer.brewery, @review.beer) %></h1>

<%= render partial: "review_info", locals: { review: @review } %>

<% if review_owner?(@review) %>
    <div class="button_pane">
        <%= button_to "Edit", edit_beer_review_path, method: "get" %>
        <%= button_to "Destroy", beer_review_path, method: "delete" %>
    </div>
<% end %>